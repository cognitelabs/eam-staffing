<div id="testimonials">
	<div class="parallax section section-text-light section-parallax section-center mt-xl mb-none" data-stellar-background-ratio="0.5", style="background-color: #0F4460;">
		<div class="container">
			<div class="row">
				<div class="col-md-10 col-md-offset-1">
					<div class="owl-carousel nav-bottom rounded-nav mb-none" data-plugin-options='{"items":1, "autoplay": true, "autoplayTimeout": 2000}'>
						<% data.testimonials.testimonials.each_with_index do |testimonial, index|  %>
							<div class="col-md-10 col-md-offset-1 mt-xl">
								<div class="testimonial testimonial-style-2 testimonial-with-quotes mb-none">
									<blockquote>
										<p>
											<%= testimonial.testimonial %>
										</p>
									</blockquote>
									<div class="testimonial-author">
										<p><strong>
											<%= testimonial.person %>
										</strong></p>
										<p>
											<%= testimonial.company %>
										</p>
									</div>
								</div>
							</div>
						<% end  %>
					</div>
				</div>
			</div>
		</div>
		
	</div>
</div>